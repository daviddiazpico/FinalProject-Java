<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="david.finalproyect.MenuAdminController">
   <children>
      <AnchorPane layoutX="300.0" prefHeight="320.0" prefWidth="300.0" style="-fx-background-color: black;">
         <children>
            <ImageView fitHeight="190.0" fitWidth="250.0" layoutX="25.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/foto_menu.jpg" />
               </image></ImageView>
         </children>
      </AnchorPane>
      <Label fx:id="lblTypeUser" layoutX="460.0" layoutY="18.0" text="type" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="btnViewUserReservations" layoutX="45.0" layoutY="75.0" mnemonicParsing="false" onAction="#viewUserReservations" style="-fx-background-color: white;" text="View a user's reservations">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnAddReservations" layoutX="45.0" layoutY="145.0" mnemonicParsing="false" onAction="#addReservations" style="-fx-background-color: white;" text="Add reservation">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnViewUserReservationsOrdered" layoutX="45.0" layoutY="110.0" mnemonicParsing="false" onAction="#viewUserReservationsOrderedByField" style="-fx-background-color: white;" text="View a user's reservations order by a field">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnLogOut" layoutX="528.0" layoutY="14.0" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: white;" text="Log out">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnRemoveReservations" layoutX="45.0" layoutY="180.0" mnemonicParsing="false" onAction="#removeReservations" style="-fx-background-color: white;" text="Remove reservation">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnAddPerson" layoutX="45.0" layoutY="215.0" mnemonicParsing="false" onAction="#addPerson" style="-fx-background-color: white;" text="Add person">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnRemovePerson" layoutX="45.0" layoutY="250.0" mnemonicParsing="false" onAction="#removePerson" style="-fx-background-color: white;" text="Remove person">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label fx:id="lblWelcome" layoutX="50.0" layoutY="20.0" text="Welcome (name)">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
