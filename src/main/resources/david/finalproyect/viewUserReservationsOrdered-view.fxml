<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="david.finalproyect.ViewUserReservationsOrderedController">
   <children>
      <AnchorPane prefHeight="320.0" prefWidth="300.0" style="-fx-background-color: black;">
         <children>
            <Button fx:id="btnOrder" layoutX="121.0" layoutY="201.0" mnemonicParsing="false" onAction="#checkChosenField" style="-fx-background-color: white; -fx-border-color: white;" text="ORDER">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <ComboBox fx:id="cbmFields" layoutX="72.0" layoutY="160.0" prefHeight="26.0" prefWidth="156.0" promptText="Choose an option" style="-fx-background-color: white;" />
            <Label layoutX="95.0" layoutY="81.0" text="DNI of the user" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="tfDni" layoutX="75.0" layoutY="109.0" promptText="DNI" style="-fx-background-color: white;" />
            <Button fx:id="btnComeBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#comeBackToMenu" style="-fx-background-color: white; -fx-border-color: white;" text="COME BACK">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <Label fx:id="lblReservations" alignment="TOP_CENTER" layoutX="375.0" layoutY="48.0" prefHeight="209.0" prefWidth="150.0" wrapText="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label layoutX="395.0" layoutY="14.0" text="RESERVATIONS">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="btnBack" layoutX="369.0" layoutY="274.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: black;" text="BACK" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnNext" layoutX="480.0" layoutY="274.0" mnemonicParsing="false" onAction="#next" style="-fx-background-color: black;" text="NEXT" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
